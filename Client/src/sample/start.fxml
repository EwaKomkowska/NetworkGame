<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.StartWindow" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #90EE90">
    <children>
        <Text fx:id="welcomeText"/>
        <HBox spacing="10" alignment="center" style="-fx-font-weight: bold">
            <Button fx:id="startButton" onAction="#joinToPlay" style="-fx-background-color: #1E90FF"/>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
